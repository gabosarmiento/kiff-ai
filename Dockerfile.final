FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install core Python dependencies first
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic==2.5.0 \
    pydantic-settings==2.1.0 \
    sqlalchemy==2.0.23 \
    psycopg2-binary==2.9.9 \
    redis==5.0.1 \
    stripe==7.8.0 \
    httpx==0.25.2 \
    python-jose[cryptography]==3.3.0 \
    passlib[bcrypt]==1.7.4 \
    python-multipart==0.0.6 \
    python-dotenv==1.0.0 \
    pandas==2.1.4 \
    requests==2.31.0 \
    pyyaml==6.0.2 \
    jinja2==3.1.2 \
    aiofiles==23.2.1

# Install critical AGNO dependencies
RUN pip install --no-cache-dir \
    groq==0.4.1 \
    openai==1.6.1 \
    lancedb==0.15.0 \
    agno==1.7.8

# Copy the backend/app directory to /app to match import structure
COPY backend/app /app

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Create necessary directories
RUN mkdir -p /app/lancedb_data /app/knowledge_db /app/tmp

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application - now main.py is directly at /app/main.py
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
